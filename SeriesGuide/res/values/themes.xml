    <style name="SeriesGuideBaseThemeLight" parent="Theme.Sherlock.Light.DarkActionBar">

        <!-- System widgets -->
        <item name="android:editTextStyle">@style/Widget.SeriesGuide.Light.EditText</item>
        <item name="android:checkboxStyle">@style/Widget.SeriesGuide.Light.CheckBox</item>
        <item name="android:listViewStyle">@style/Widget.SeriesGuide.ListView</item>
        <item name="android:listViewWhiteStyle">@style/Widget.SeriesGuide.ListView.White</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>