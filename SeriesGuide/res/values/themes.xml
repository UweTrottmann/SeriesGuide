<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- SeriesGuides default theme -->
    <style name="SeriesGuideTheme" parent="SeriesGuideBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="custom_list_selector">@drawable/list_selector_sg</item>

        <!-- System widgets (ABS) -->
        <item name="dropDownListViewStyle">@style/DropDownListView</item>

        <!-- System widgets (native) -->
        <item name="android:buttonStyle">@style/Widget.SeriesGuide.Button</item>
        <item name="android:imageButtonStyle">@style/Widget.SeriesGuide.ImageButton</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>

        <!-- Action bar (ABS) -->
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="actionBarTabTextStyle">@style/ActionBarTabTextStyle</item>
        <item name="actionBarItemBackground">@drawable/list_selector_sg</item>
        <item name="actionDropDownStyle">@style/DropDownNav</item>

        <!-- Colors -->
        <item name="textColorSgDefault">@color/text_default</item>
        <item name="textColorSgPrimary">@color/text_primary_sg</item>
        <item name="textColorSgPrimaryInverse">@color/text_primary_inverse</item>
        <item name="textColorSgGreen">@color/green_bright</item>
        <item name="textColorSgDim">@color/text_dim</item>
        <item name="textColorSgActionBar">@color/text_default</item>
        <item name="colorAccent">@color/accent_primary</item>
        <item name="colorOverlay">@color/overlay</item>
        <item name="colorBackgroundDim">@color/background_dim</item>
        <item name="colorSeparator">@color/separator</item>
        <item name="colorDivider">@color/divider</item>
        <item name="colorTabStripText">@color/text_default</item>

        <!-- Text -->
        <item name="android:textAppearance">@style/TextAppearance</item>

        <!-- Drawables -->
        <item name="drawableAddIcon">@drawable/ic_action_add</item>
        <item name="drawableCalendarIcon">@drawable/ic_action_calendar</item>
        <item name="drawableDivider">@drawable/divider</item>
        <item name="drawableStar">@drawable/ic_action_star_10</item>
        <item name="drawableStar0">@drawable/ic_action_star_0</item>
        <item name="drawableCancel">@drawable/ic_action_cancel</item>
        <item name="drawableArrowUp">@drawable/ic_action_arrow_top</item>
        <item name="drawableDropdown">@drawable/ic_action_contextmenu</item>
        <item name="drawableCheckin">@drawable/ic_action_checkin</item>
    </style>

    <style name="SeriesGuideBaseTheme" parent="Theme.Sherlock">

        <!-- System widgets (native) -->
        <item name="android:editTextStyle">@style/Widget.SeriesGuide.EditText</item>
        <item name="android:checkboxStyle">@style/Widget.SeriesGuide.CheckBox</item>
        <item name="android:listViewStyle">@style/Widget.SeriesGuide.ListView</item>
        <item name="android:listViewWhiteStyle">@style/Widget.SeriesGuide.ListView.White</item>
    </style>

    <style name="SeriesGuideTheme.Dialog" parent="SeriesGuideTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.SeriesGuide</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
        <item name="android:windowActionBar" tools:targetApi="honeycomb">false</item>
        <item name="android:windowActionModeOverlay" tools:targetApi="honeycomb">true</item>
        <item name="android:windowCloseOnTouchOutside" tools:targetApi="honeycomb">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/abs__primary_text_holo_light</item>
        <item name="android:windowMinWidthMajor" tools:targetApi="honeycomb">45%</item>
        <item name="android:windowMinWidthMinor" tools:targetApi="honeycomb">75%</item>
    </style>

    <style name="SeriesGuideTheme.Dialog.CheckIn">
        <item name="android:windowAnimationStyle">@style/Animation.CheckinDialog</item>
    </style>

    <!-- A dark Android theme -->
    <style name="ICSBaseTheme" parent="Theme.Sherlock">
