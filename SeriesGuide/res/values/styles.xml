<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SeriesGuideTheme" parent="Theme.Sherlock.ForceOverflow">
        <item name="vpiTitlePageIndicatorStyle">@style/TitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicator</item>
        <item name="vpiTabTextStyle">@style/TabPageIndicatorText</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="dropDownListViewStyle">@style/DropDownListView</item>
        <item name="actionBarItemBackground">@drawable/list_selector_holo_dark</item>
        <item name="android:actionBarItemBackground">@drawable/list_selector_holo_dark</item>
    </style>

    <style name="ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_background</item>
        <item name="android:background">@drawable/ab_background</item>
    </style>

    <style name="ActionBarTabStyle" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="DropDownListView" parent="Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/list_selector_holo_dark</item>
    </style>

    <style name="TitlePageIndicator">
        <item name="android:background">@android:color/transparent</item>
        <item name="footerColor">@color/accent_primary</item>
        <item name="footerLineHeight">2dp</item>
        <item name="footerIndicatorHeight">5dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="textColor">@color/text_primary</item>
        <item name="selectedColor">@color/text_primary</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="TabPageIndicator">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TabPageIndicatorText">
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textColor">@color/vpi__dark_theme</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Header">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
    </style>

    <style name="ListHeader">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Airdata">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/text_dim</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Used for metadata in detail views. -->
    <style name="SmallItems">
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
    </style>

    <style name="SmallItems.WithSideMargins">
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
    </style>

    <style name="Label">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/inline_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScrollingLayout">
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingRight">@dimen/layout_padding</item>
        <item name="android:paddingTop">@dimen/layout_padding</item>
    </style>

    <style name="Subtitle">
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
    </style>

    <!-- Used for longer passages of text -->
    <style name="DescriptionFont">
        <item name="android:textSize">@dimen/text_size_xmedium</item>
    </style>

    <!-- custom button style -->
    <style name="HoloCompatButton">
        <item name="android:background">@drawable/btn_default_holo_dark</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="HoloCompatButton.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Widget items -->
    <style name="WidgetTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WidgetTextView.Show">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Notification -->
    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CenteredColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>