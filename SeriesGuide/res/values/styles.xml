<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Text styles -->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.XSmall">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="TextAppearance.XSmall.Dim">
        <item name="android:textColor">@color/text_dim</item>
    </style>

    <style name="TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextAppearance.Small.Highlight">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Small.Dim">
        <item name="android:textColor">@color/text_dim</item>
    </style>

    <style name="TextAppearance.Small.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_primary_sg</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Medium.Dim">
        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="TextAppearance.Medium.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Medium.Light.Dim">
        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="TextAppearance.Large" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.Large.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.XLarge" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="TextAppearance.XLarge.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget"></style>

    <style name="Widget.SeriesGuide" parent="Widget"></style>

    <!-- Buttons -->
    <style name="Widget.SeriesGuide.Button">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/btn_default_sg</item>
        <item name="android:textAppearance">?attr/textAppearanceSgMedium</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless">
        <item name="android:background">?custom_list_selector</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Small.Highlight">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Widget.SeriesGuide.ImageButton">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/btn_default_sg</item>
    </style>

    <!-- Dialogs -->
    <style name="DialogWindowTitle.SeriesGuide" parent="Widget">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance.SeriesGuide.DialogWindowTitle</item>
        <item name="android:minHeight">64dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="TextAppearance.SeriesGuide.DialogWindowTitle" parent="Widget">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Animation.CheckinDialog" parent="android:Animation.Dialog">
        <item name="android:windowExitAnimation">@anim/checkin_dialog_exit</item>
    </style>

    <!-- ABS -->
    <style name="ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@drawable/sg_actionbar_background</item>
        <item name="android:background">@drawable/sg_actionbar_background</item>
    </style>

    <style name="ActionBarTabStyle" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="DropDownListView" parent="Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">?custom_list_selector</item>
    </style>

    <style name="DropDownNav" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_sg</item>
        <item name="android:background">@drawable/spinner_background_ab_sg</item>
    </style>

    <!-- ActionBar Spinner -->
    <style name="Widget.DropDownItem" parent="Widget">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.SpinnerItem" parent="Widget">
        <item name="android:textAppearance">@style/TextAppearance.Medium.Light</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!-- ViewPagerIndicator -->
    <style name="TitlePageIndicator">
        <item name="android:background">@android:color/transparent</item>
        <item name="footerColor">@color/accent_primary</item>
        <item name="footerLineHeight">2dp</item>
        <item name="footerIndicatorHeight">5dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="selectedColor">@color/text_primary</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="TabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vpi__dark_theme</item>
    </style>

    <style name="Header">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
    </style>

    <style name="ListHeader">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Unified text styles and sizes -->
    <style name="ListTextBig">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListTextNormal">
        <item name="android:textSize">@dimen/text_size_xmedium</item>
    </style>

    <style name="ListTextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="ListTextSmall.Dim">
        <item name="android:textColor">@color/text_dim</item>
    </style>

    <!-- Used for metadata in detail views. -->
    <style name="SmallItems">
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
    </style>

    <style name="SmallItems.WithSideMargins">
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
    </style>

    <style name="Label">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/inline_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelBase">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScrollingLayout">
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingRight">@dimen/layout_padding</item>
        <item name="android:paddingTop">@dimen/layout_padding</item>
    </style>

    <style name="Subtitle">
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
    </style>

    <!-- Used for longer passages of text -->
    <style name="DescriptionFont">
        <item name="android:textSize">@dimen/text_size_xmedium</item>
    </style>

    <!-- Widget items -->
    <style name="WidgetTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WidgetTextView.Show">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Notification -->
    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CenteredColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="FirstRunColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <!-- Rating -->
    <style name="RatingButton">
        <item name="android:background">?custom_list_selector</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:drawableLeft">@drawable/trakt_heart</item>
    </style>

    <!-- ////////////////////////////////////////////// -->


    <!-- Dark styles -->


    <!-- Title indicator -->
    <style name="TitlePageIndicator.Dark" parent="TitlePageIndicator">
        <item name="footerColor">#33B5E5</item>
    </style>

    <!-- ////////////////////////////////////////////// -->


    <!-- Light styles -->


    <!-- Text styles -->
    <style name="TextAppearance.Light" parent="TextAppearance"></style>

    <style name="TextAppearance.Light.XSmall" parent="TextAppearance.XSmall"></style>

    <style name="TextAppearance.Light.XSmall.Dim">
        <item name="android:textColor">@color/text_dim_light</item>
    </style>

    <style name="TextAppearance.Light.Small" parent="TextAppearance.Small"></style>

    <style name="TextAppearance.Light.Small.Dim">
        <item name="android:textColor">@color/text_dim_light</item>
    </style>

    <style name="TextAppearance.Light.Small.Primary">
        <item name="android:textColor">@color/text_primary_light_sg</item>
    </style>

    <style name="TextAppearance.Light.Medium" parent="TextAppearance.Medium">
        <item name="android:textColor">@color/text_primary_light_sg</item>
    </style>

    <style name="TextAppearance.Light.Medium.Dim">
        <item name="android:textColor">@color/text_default_inverse</item>
    </style>

    <style name="TextAppearance.Light.Medium.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Light.Medium.Light.Dim">
        <item name="android:textColor">@color/text_default_inverse</item>
    </style>

    <style name="TextAppearance.Light.XLarge" parent="@style/TextAppearance.XLarge">
        <item name="android:textColor">@color/text_primary_light_sg</item>
    </style>

    <style name="TextAppearance.Light.XLarge.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.SeriesGuide.Light.Button" parent="Widget.SeriesGuide.Button">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Title page indicator -->
    <style name="TitlePageIndicator.Light">
        <item name="android:textColor">@color/text_primary_inverse</item>
        <item name="selectedColor">@color/text_primary_inverse</item>
    </style>

    <!-- Tab page indicator -->
    <style name="TabPageIndicator.Light">
        <item name="android:textAppearance">@style/TextAppearance.Light.TabPageIndicator</item>
    </style>

    <style name="TextAppearance.Light.TabPageIndicator" parent="TextAppearance.TabPageIndicator">
        <item name="android:textColor">@color/vpi__light_theme</item>
    </style>

    <!-- ActionBar Spinner -->
    <style name="Widget.Light.DropDownItem" parent="Widget.DropDownItem">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.Light.SpinnerItem" parent="Widget.SpinnerItem">
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>