<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent" >    <ImageView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scaleType="fitXY"        android:src="@drawable/firstrun_background" />    <ScrollView        android:id="@+id/scroll"        android:layout_width="match_parent"        android:layout_height="match_parent" >        <RelativeLayout            xmlns:android="http://schemas.android.com/apk/res/android"            android:id="@+id/root"            style="@style/FirstRunColumn"            android:padding="@dimen/large_padding" >            <TextView                android:id="@+id/textView1"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentTop="true"                android:layout_marginTop="8dp"                android:text="@string/welcome_add_part1"                android:textAppearance="?attr/textAppearanceSg" />            <Button                android:id="@+id/addbutton"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/textView1"                android:layout_centerHorizontal="true"                android:background="?custom_list_selector"                android:drawableLeft="@drawable/ic_action_add"                android:drawablePadding="5dp"                android:paddingLeft="@dimen/default_padding"                android:paddingRight="@dimen/default_padding"                android:text="@string/add_show"                android:textAllCaps="true"                android:textAppearance="?attr/textAppearanceSgSmall"                android:textColor="@color/text_primary"                android:textStyle="bold" />            <TextView                android:id="@+id/textView3"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/addbutton"                android:text="@string/welcome_add_part2"                android:textAppearance="?attr/textAppearanceSg" />            <Button                android:id="@+id/dismissButton"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentRight="true"                android:layout_below="@+id/textView3"                android:layout_marginTop="48dp"                android:paddingLeft="32dp"                android:paddingRight="32dp"                android:text="@string/dismiss" />            <include                android:id="@+id/divider1"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@+id/dismissButton"                android:layout_marginBottom="8dp"                android:layout_marginTop="16dp"                layout="@layout/holodivider" />            <TextView                android:id="@+id/language_message"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/divider1"                android:layout_marginBottom="8dp"                android:layout_marginRight="8dp"                android:text="@string/pref_language"                android:textAppearance="?attr/textAppearanceSg" />            <Spinner                android:id="@+id/welcome_setuplanguage"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/language_message"                android:layout_centerHorizontal="true"                android:prompt="@string/welcome_setuplanguage" />            <TextView                android:id="@+id/trakt_message"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/welcome_setuplanguage"                android:layout_marginTop="8dp"                android:text="@string/welcome_traktmessage"                android:textAppearance="?attr/textAppearanceSg" />            <Button                android:id="@+id/welcome_setuptrakt"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/trakt_message"                android:layout_centerHorizontal="true"                android:background="?custom_list_selector"                android:drawableLeft="@drawable/ic_trakt"                android:drawablePadding="5dp"                android:padding="@dimen/default_padding"                android:text="@string/welcome_setuptrakt"                android:textColor="@color/text_primary" />        </RelativeLayout>    </ScrollView></FrameLayout>