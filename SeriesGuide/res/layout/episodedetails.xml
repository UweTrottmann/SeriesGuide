<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/episodedetails_root"
    style="@style/ScrollingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/showTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_padding"
        android:background="?custom_list_selector"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusDown="@+id/checkinButton"
        android:nextFocusLeft="@+id/textViewEpisodeDetailsShowName"
        android:nextFocusRight="@+id/textViewEpisodeDetailsShowName"
        android:paddingBottom="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:paddingTop="@dimen/default_padding"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/title"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/airTime"
        style="@style/Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/imagecontainer" />

    <include layout="@layout/episode_meta" />

    <include layout="@layout/divider_horizontal" />

    <include
        android:id="@+id/buttonbar_ref"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        layout="@layout/show_info_buttonbar" />

</LinearLayout>