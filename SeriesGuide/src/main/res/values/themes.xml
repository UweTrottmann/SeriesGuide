        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle</item>
        <item name="android:actionBarItemBackground">@drawable/list_selector_sg</item>

        <!-- Fast scroll thumb -->
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>

        <!-- Text -->
        <item name="android:textAppearance">@style/TextAppearance</item>

        <!-- Special attributes -->
        <item name="custom_list_selector">@drawable/list_selector_sg</item>
        <item name="tabStripBackground">@drawable/tab_strip_background_sg</item>

        <!-- Colors -->
        <item name="textColorSgDefault">@color/text_default</item>
        <item name="textColorSgPrimary">@color/text_primary_sg</item>
        <item name="textColorSgPrimaryInverse">@color/text_primary_inverse</item>
