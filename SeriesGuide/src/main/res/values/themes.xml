<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme" />

    <style name="Theme.BaseSeriesGuide" parent="Theme.AppCompat.NoActionBar">

        <!-- All customizations that are SPECIFIC to API-level 15+ go here. -->

        <!-- Special attributes -->
        <item name="selectableItemBackground">@drawable/list_selector_sg</item>
        <item name="sgBorderlessButtonBackground">@drawable/btn_borderless_sg</item>

        <!-- Windows -->
        <item name="android:dialogTheme">@style/Theme.SeriesGuide.Dialog</item>

        <!-- System widgets -->
        <item name="android:borderlessButtonStyle">@style/Widget.SeriesGuide.Button.Borderless</item>
        <item name="android:progressBarStyleHorizontal">@style/Widget.SeriesGuide.ProgressBar</item>
        <item name="android:editTextBackground">@drawable/edit_text_sg</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_sg</item>

        <!-- Fast scroll thumb -->
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_sg</item>

    </style>

    <!-- SeriesGuides default theme -->
    <style name="Theme.SeriesGuide" parent="Theme.BaseSeriesGuide">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@color/accent_primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/accent_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/teal_500</item>

        <!-- Special attributes -->
        <item name="sgActivatedItemBackgroundDrawer">@drawable/activated_background_drawer_sg</item>

        <!-- Windows -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- System widgets -->
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_sg</item>

        <!-- Action bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>

        <!-- Text -->
        <item name="android:textAppearance">@style/TextAppearance</item>

        <!-- Colors -->
        <item name="sgTextColorGreen">@color/teal_500</item>
        <item name="sgTextColorSecondaryDim">@color/text_secondary_disabled_dark</item>
        <item name="sgColorBackgroundCard">@color/background_card_dark</item>
        <item name="sgColorBackgroundDim">@color/black_38</item>
        <item name="sgColorIcon">@color/white</item>
        <item name="sgColorIconInactive">@color/white_50</item>
        <item name="sgColorSeparator">@color/separator</item>
        <item name="sgColorDivider">@color/divider</item>
        <item name="sgColorNavDrawerIcon">@color/nav_drawer_icon_sg</item>
        <item name="sgColorNavDrawerText">@color/nav_drawer_text_sg</item>
        <item name="sgColorShadow">@color/protection_dark</item>

        <!-- Drawables -->
        <item name="drawableBackgroundGradient">@drawable/background_gradient</item>
        <item name="drawableCancel">@drawable/ic_action_cancel</item>
        <item name="drawableCheckin">@drawable/ic_action_checkin</item>
        <item name="drawableCollect">@drawable/ic_action_collect</item>
        <item name="drawableCollectAll">@drawable/ic_action_collect_all</item>
        <item name="drawableList">@drawable/ic_action_list</item>
        <item name="drawableSkip">@drawable/ic_action_skip</item>
        <item name="drawableTraktHeart">@drawable/trakt_heart</item>
        <item name="drawableWatch">@drawable/ic_action_tick</item>
        <item name="drawableWatchAll">@drawable/ic_action_watch_all</item>
        <item name="drawableWatched">@drawable/ic_ticked</item>
        <item name="drawableWatchedAll">@drawable/ic_watched_all</item>
        <item name="drawableWatchSkipped">@drawable/ic_action_watch_skipped</item>

    </style>

