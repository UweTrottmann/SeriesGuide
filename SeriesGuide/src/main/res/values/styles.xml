<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Text styles -->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/textColorSgDefault</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextAppearance.Inverse">
        <item name="android:textColor">?attr/textColorSgPrimaryInverse</item>
    </style>

    <style name="TextAppearance.Dim">
        <item name="android:textColor">?attr/textColorSgDim</item>
    </style>

    <style name="TextAppearance.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Primary">
        <item name="android:textColor">?attr/textColorSgPrimary</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.XSmall">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">?attr/textColorSgDefault</item>
    </style>

    <style name="TextAppearance.XSmall.Condensed">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

    <style name="TextAppearance.XSmall.Dim">
        <item name="android:textColor">?attr/textColorSgDim</item>
    </style>

    <style name="TextAppearance.XSmall.Dim.Condensed">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/textColorSgDefault</item>
    </style>

    <style name="TextAppearance.Small.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Small.Highlight">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Small.Highlight.Blue">
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="TextAppearance.Small.Highlight.Red">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="TextAppearance.Small.Dim">
        <item name="android:textColor">?attr/textColorSgDim</item>
    </style>

    <style name="TextAppearance.Small.Primary">
        <item name="android:textColor">?attr/textColorSgPrimary</item>
    </style>

    <style name="TextAppearance.Small.Label">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textColor">?attr/textColorSgPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Medium.Dim">
        <item name="android:textColor">?attr/textColorSgDim</item>
    </style>

    <style name="TextAppearance.Medium.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Medium.Light.Dim">
        <item name="android:textColor">?attr/textColorSgDefault</item>
    </style>

    <style name="TextAppearance.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/textColorSgPrimary</item>
    </style>

    <style name="TextAppearance.ActionBar" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_default_inverse</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ActionBar.White">
        <item name="android:textColor">?attr/textColorSgActionBar</item>
    </style>

    <style name="TextAppearance.Large.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.HyperLarge">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-thin</item>
        <item name="android:textSize">@dimen/text_size_hyperlarge</item>
    </style>

    <style name="TextAppearance.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorTabStripText</item>
    </style>

    <style name="TextAppearance.Display1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.Display1.White">
        <item name="android:textColor">@color/black_11</item>
    </style>

    <style name="TextAppearance.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Body.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Body.Dim">
        <item name="android:textColor">?attr/textColorSgDim</item>
    </style>

    <style name="TextAppearance.Body.Highlight">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Caption.Dim">
        <item name="android:textColor">?attr/textColorSgDim</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget"/>

    <style name="Widget.SeriesGuide" parent="Widget"/>

    <!-- RTL support for grid views -->
    <style name="Widget.SeriesGuide.RtlGridView" />

    <style name="Widget.SeriesGuide.RtlGridViewItem" />

    <!-- Buttons -->
    <style name="Widget.SeriesGuide.Button" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/btn_default_sg</item>
        <item name="android:textAppearance">@style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/text_primary_sg</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless">
        <item name="android:background">?custom_list_selector</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:textColor">?attr/textColorSgPrimary</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Default">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textColor">?attr/textColorSgDefault</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Small.Default">
        <item name="android:textColor">?attr/textColorSgDefault</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Small.Highlight">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Caption">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Caption.Dim">
        <item name="android:textColor">?attr/textColorSgDim</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Rating">
        <item name="android:drawableLeft">@drawable/trakt_heart</item>
        <item name="android:drawablePadding">@dimen/inline_padding</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.SeriesGuide.ImageButton" parent="android:Widget.Holo.ImageButton">
        <item name="android:background">@drawable/btn_default_sg</item>
    </style>

    <!-- Progress bar -->
    <style name="ProgressBar" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sg</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_sg</item>
    </style>

    <!-- Smooth Progress Bar -->
    <style name="Widget.SeriesGuide.SmoothProgressBar" parent="SmoothProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">1.0</item>
        <item name="spb_colors">?attr/colorsProgressBar</item>
        <item name="spb_stroke_width">4dp</item>
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_reversed">false</item>
        <item name="spb_mirror_mode">false</item>
        <item name="spb_interpolator">spb_interpolator_linear</item>
    </style>

    <!-- TextView -->
    <style name="Widget.SeriesGuide.TextView"/>

    <style name="Widget.SeriesGuide.TextView.Body">
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="Widget.SeriesGuide.TextView.ShowLabels">
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Medium.Light</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- Tabs -->
    <style name="Widget.SeriesGuide.Tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/tab_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/tab_padding_horizontal</item>
    </style>

    <!-- Dialogs -->
    <style name="Widget.SeriesGuide.DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Large.Light</item>
        <item name="android:minHeight">64dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="Animation.CheckinDialog" parent="android:Animation.Dialog">
        <item name="android:windowExitAnimation">@anim/checkin_dialog_exit</item>
    </style>

    <!-- Action bar -->
    <style name="ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_background_sg</item>
        <item name="android:titleTextStyle">@style/TextAppearance.ActionBar.White</item>
    </style>

    <style name="ActionBar.Invisible">
        <item name="android:background">@null</item>
    </style>

    <style name="ActionBarTabTextStyle" parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">?attr/textColorSgActionBar</item>
    </style>

    <style name="DropDownListView" parent="android:Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">?custom_list_selector</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_round</item>
    </style>

    <!-- ActionBar Spinner -->
    <style name="ActionBarSpinnerItem">
        <item name="android:textColor">?attr/textColorSgActionBar</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

    <!-- Easy layouting -->
    <style name="DefaultPadding"/>

    <style name="DefaultPadding.Page">
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/large_padding</item>
        <item name="android:paddingRight">@dimen/large_padding</item>
    </style>

    <style name="DefaultPadding.Blocks">
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
    </style>

    <style name="DefaultPadding.Blocks.WithTopMargin">
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">@dimen/inline_padding</item>
    </style>

    <style name="DefaultPadding.Blocks.WithBottomMargin">
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
    </style>

    <style name="DefaultPadding.Blocks.WithBottomMargin.FlowText">
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="Page">
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Page.Centered">
    </style>

    <!-- Widget items -->
    <style name="WidgetTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FirstRunColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Panes -->
    <style name="EpisodesPane">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DetailsPane">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- ////////////////////////////////////////////// -->


    <!-- Dark styles -->

    <!-- Action bar -->
    <style name="ActionBarDark" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_background_dark</item>
        <item name="android:titleTextStyle">@style/TextAppearance.ActionBar.White</item>
    </style>

    <!-- ////////////////////////////////////////////// -->


    <!-- Light styles -->

    <!-- Action bar -->
    <style name="ActionBar.Light" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background_sg</item>
        <item name="android:titleTextStyle">@style/TextAppearance.ActionBar.White</item>
    </style>

    <style name="ActionBar.Light.Invisible" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <item name="android:titleTextStyle">@style/TextAppearance.ActionBar</item>
    </style>

    <style name="ActionOverflowButtonStyle.Light">
        <item name="android:src">@drawable/ic_action_overflow_round_inverse</item>
    </style>

    <!-- Progress bar -->
    <style name="ProgressBar.Light" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sg_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_sg</item>
    </style>

</resources>
