<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Enabled states -->
        
    <item android:state_checked="true" android:state_window_focused="false" android:state_enabled="true" android:drawable="@drawable/btn_check_on_sg_light" />
    <item android:state_checked="false" android:state_window_focused="false" android:state_enabled="true" android:drawable="@drawable/btn_check_off_sg_light" />

    <item android:state_checked="true" android:state_pressed="true" android:state_enabled="true" android:drawable="@drawable/btn_check_on_pressed_sg_light" />
    <item android:state_checked="false" android:state_pressed="true" android:state_enabled="true" android:drawable="@drawable/btn_check_off_pressed_sg_light" />

    <item android:state_checked="true" android:state_focused="true" android:state_enabled="true" android:drawable="@drawable/btn_check_on_focused_sg_light" />
    <item android:state_checked="false" android:state_focused="true" android:state_enabled="true" android:drawable="@drawable/btn_check_off_focused_sg_light" />

    <item android:state_checked="false" android:state_enabled="true" android:drawable="@drawable/btn_check_off_sg_light" />
    <item android:state_checked="true" android:state_enabled="true" android:drawable="@drawable/btn_check_on_sg_light" />

    <!-- Disabled states -->

    <item android:state_checked="true" android:state_window_focused="false" android:drawable="@drawable/btn_check_on_disabled_sg_light" />
    <item android:state_checked="false" android:state_window_focused="false" android:drawable="@drawable/btn_check_off_disabled_sg_light" />

    <item android:state_checked="true" android:state_focused="true" android:drawable="@drawable/btn_check_on_disabled_focused_sg_light" />
    <item android:state_checked="false" android:state_focused="true" android:drawable="@drawable/btn_check_off_disabled_focused_sg_light" />

    <item android:state_checked="false" android:drawable="@drawable/btn_check_off_disabled_sg_light" />
    <item android:state_checked="true" android:drawable="@drawable/btn_check_on_disabled_sg_light" />

</selector>
