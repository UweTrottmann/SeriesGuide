<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Special themes -->
    <style name="ImmersiveTheme" parent="Theme.SeriesGuide">

        <!-- Action bar (native, v11+) -->
        <item name="android:actionBarStyle">@style/ActionBar.Invisible</item>

        <!-- Translucent navbar (native, v19+) -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="ImmersiveTheme.Stock" parent="AndroidTheme">

        <!-- Action bar (native, v11+) -->
        <item name="android:actionBarStyle">@style/ActionBar.Invisible</item>

        <!-- Translucent navbar (native, v19+) -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        
    </style>

    <style name="ImmersiveTheme.Light" parent="Theme.SeriesGuide.Light">

        <!-- Action bar (native, v11+) -->
        <item name="android:actionBarStyle">@style/ActionBar.Light.Invisible</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.Sherlock.Light.ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_light</item>

        <!-- Translucent navbar (native, v19+) -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

</resources>