<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="TextAppearance.Tab">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_default_sg</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Button">
        <item name="android:textSize">@dimen/text_size_default_sg</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Body.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Buttons -->
    <!-- Bend to material here to avoid creating attributes for each borderless button variant -->
    <style name="Widget.SeriesGuide.Button.Borderless" parent="android:Widget.Material.Button.Borderless">
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Caption.Platform">
        <item name="android:padding">4dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Action bar -->
    <style name="Widget.SeriesGuide.ActionBar">
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Tabs -->
    <style name="Widget.SeriesGuide.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Inline snackbar -->
    <!-- Use of CoordinatorLayout shifts layouts down, counter by moving inline snackbar up. -->
    <style name="Widget.SeriesGuide.InlineSnackbar">
        <item name="android:layout_marginBottom">?attr/actionBarSize</item>
    </style>

</resources>