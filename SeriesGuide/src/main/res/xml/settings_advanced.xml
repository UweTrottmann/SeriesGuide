<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="clearCache"
        android:summary="@string/clear_cache_summary"
        android:title="@string/clear_cache" />

    <CheckBoxPreference
        android:defaultValue="True"
        android:key="enableGAnalytics"
        android:summary="@string/pref_ganalyticssummary"
        android:title="@string/analytics" />

    <Preference
        android:key="backup"
        android:title="Legacy Backup/Restore">
        <intent
            android:targetClass="com.battlelancer.seriesguide.ui.BackupDeleteActivity"
            android:targetPackage="@string/package_name" />
    </Preference>

    <Preference
        android:summary="@string/pref_translatesummary"
        android:title="@string/pref_translate">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="http://crowdin.net/project/seriesguide-translations/invite" />
    </Preference>

    <Preference
        android:summary="@string/pref_communitysummary"
        android:title="@string/pref_community">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://plus.google.com/communities/103447253937737054097" />
    </Preference>

    <Preference
        android:summary="@string/pref_suggest_featuressummary"
        android:title="@string/pref_suggest_features">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="http://seriesguide.uservoice.com" />
    </Preference>

    <PreferenceCategory android:title="Logging">

        <CheckBoxPreference
            android:defaultValue="False"
            android:key="logcatOutput"
            android:summary="@string/pref_debug_logging_summary"
            android:title="@string/pref_debug_logging" />

        <CheckBoxPreference
            android:defaultValue="False"
            android:key="networkLogging"
            android:dependency="logcatOutput"
            android:summary="@string/pref_network_logging_summary"
            android:title="@string/pref_network_logging" />

    </PreferenceCategory>

</PreferenceScreen>
