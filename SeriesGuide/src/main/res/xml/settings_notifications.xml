<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="True"
        android:key="com.battlelancer.seriesguide.notifications"
        android:summary="@string/pref_notificationssummary"
        android:title="@string/pref_notifications" />

    <ListPreference
        android:defaultValue="60"
        android:entries="@array/notificationThreshold"
        android:entryValues="@array/notificationThresholdData"
        android:key="com.battlelancer.seriesguide.notifications.threshold"
        android:title="@string/pref_notifications_treshold" />

    <CheckBoxPreference
        android:defaultValue="False"
        android:key="com.battlelancer.seriesguide.notifications.favonly"
        android:summary="@string/pref_notifyfavonlysummary"
        android:title="@string/pref_notifyfavonly" />
    <CheckBoxPreference
        android:defaultValue="False"
        android:key="com.battlelancer.seriesguide.notifications.vibrate"
        android:summary="@string/pref_vibratesummary"
        android:title="@string/pref_vibrate" />

    <Preference
        android:defaultValue="content://settings/system/notification_sound"
        android:key="com.battlelancer.seriesguide.notifications.ringtone"
        android:title="@string/pref_ringtone" />

</PreferenceScreen>