<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/Page.Centered">

        <TextView
            android:id="@+id/textViewTraktUploadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/upload_existing_shows"
            android:textAppearance="@style/TextAppearance.Large.Light" />

        <TextView
            android:id="@+id/textViewTraktUploadHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewTraktUploadTitle"
            android:layout_marginTop="@dimen/large_padding"
            android:text="@string/trakt_upload_hint" />

        <Button
            android:id="@+id/buttonTraktUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewTraktUploadHint"
            android:layout_marginTop="@dimen/default_padding"
            android:text="@string/trakt_upload" />

        <CheckBox
            android:id="@+id/checkBoxTraktUploadUnwatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/buttonTraktUpload"
            android:layout_marginTop="@dimen/large_padding"
            android:text="@string/trakt_syncunwatched" />

        <ProgressBar
            android:id="@+id/progressBarTraktUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonTraktUpload"
            android:layout_alignTop="@+id/buttonTraktUpload"
            android:layout_toRightOf="@+id/buttonTraktUpload" />
    </RelativeLayout>

</ScrollView>