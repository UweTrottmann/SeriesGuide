<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerSnackbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background_snackbar"
    tools:showIn="@layout/fragment_now">

    <TextView
        android:id="@+id/textViewSnackbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/keyline"
        android:paddingTop="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="@string/offline"
        android:textAppearance="@style/TextAppearance.Body"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonSnackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/keyline"
        android:paddingRight="@dimen/keyline"
        tools:text="@string/refresh"
        android:textAppearance="@style/TextAppearance.Button"
        android:textColor="?attr/colorAccent"
        android:background="?attr/selectableItemBackgroundBorderless" />
</LinearLayout>