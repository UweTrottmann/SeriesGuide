<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/headerGetGlueObjects"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/large_padding">

    <TextView
        android:id="@+id/textViewFixGetGlueHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large_padding"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:text="@string/select_show"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.Large.Light" />

    <TextView
        android:id="@+id/textViewSelectedShowHeader"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFixGetGlueHeader"
        android:layout_marginEnd="@dimen/large_padding"
        android:layout_marginRight="@dimen/large_padding"
        android:ellipsize="end"
        android:paddingLeft="@dimen/default_padding"
        android:paddingStart="@dimen/default_padding"
        android:text="@string/check_into"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSelectedShowValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFixGetGlueHeader"
        android:layout_toEndOf="@+id/textViewSelectedShowHeader"
        android:layout_toRightOf="@+id/textViewSelectedShowHeader"
        android:paddingEnd="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:text="@string/no_selection" />

    <include
        android:id="@+id/divider1"
        layout="@layout/divider_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textViewSelectedShowValue"
        android:layout_marginTop="@dimen/large_padding" />

</RelativeLayout>