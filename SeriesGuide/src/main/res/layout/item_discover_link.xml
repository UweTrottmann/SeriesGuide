<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/grid_item_margin_vertical"
    android:layout_marginLeft="@dimen/grid_item_margin_horizontal"
    android:layout_marginRight="@dimen/grid_item_margin_horizontal"
    android:layout_marginTop="@dimen/grid_item_margin_vertical"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/sgColorBackgroundCard"
    app:cardPreventCornerOverlap="false"
    tools:layout_width="150dp">

    <TextView
        android:id="@+id/textViewDiscoverLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:minHeight="56dp"
        android:paddingBottom="@dimen/inline_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:paddingTop="@dimen/inline_padding"
        android:textAppearance="@style/TextAppearance.Button"
        tools:text="Digital releases" />

</android.support.v7.widget.CardView>