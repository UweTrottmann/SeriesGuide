<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/buttonbar_services"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingTop="@dimen/default_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/inline_padding"
        android:layout_marginRight="@dimen/inline_padding"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"
            android:text="@string/services_watch"
            android:textAppearance="@style/TextAppearance.Small.Label" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/inline_padding"
            android:background="?attr/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?attr/drawableDivider"
            android:orientation="vertical"
            android:showDividers="middle">

            <include layout="@layout/services_watch" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/inline_padding"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"
            android:text="@string/services_more"
            android:textAppearance="@style/TextAppearance.Small.Label" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/inline_padding"
            android:background="?attr/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?attr/drawableDivider"
            android:orientation="vertical"
            android:showDividers="middle">

            <include layout="@layout/services_more" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>