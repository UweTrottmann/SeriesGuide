<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textViewShowOverview"
        style="@style/Block.FlowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Body"
        android:textIsSelectable="true"
        tools:text="A multi-line description of this show. Which is rather lenghty." />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/large_padding"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_marginRight="@dimen/large_padding"
        android:layout_marginBottom="@dimen/large_padding"
        android:background="?attr/sgColorDivider" />

    <include
        layout="@layout/people_list"
        android:id="@+id/containerShowCast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/people_list"
        android:id="@+id/containerShowCrew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/large_padding"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_marginRight="@dimen/large_padding"
        android:background="?attr/sgColorDivider" />

    <TextView
        style="@style/Block.WithTopMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_genres"
        android:textAppearance="@style/TextAppearance.Body.Bold" />

    <TextView
        android:id="@+id/textViewShowGenres"
        style="@style/Block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Body"
        android:textIsSelectable="true" />

    <TextView
        style="@style/Block.WithTopMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_contentrating"
        android:textAppearance="@style/TextAppearance.Body.Bold" />

    <TextView
        android:id="@+id/textViewShowContentRating"
        style="@style/Block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Body"
        android:textIsSelectable="true" />

    <TextView
        style="@style/Block.WithTopMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_release_times"
        android:textAppearance="@style/TextAppearance.Body.Bold" />

    <TextView
        android:id="@+id/textViewShowReleaseCountry"
        style="@style/Block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Body"
        android:textIsSelectable="true" />

    <TextView
        style="@style/Block.WithTopMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/original_release"
        android:textAppearance="@style/TextAppearance.Body.Bold" />

    <TextView
        android:id="@+id/textViewShowFirstAirdate"
        style="@style/Block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Body"
        android:textIsSelectable="true" />

    <TextView
        style="@style/Block.WithTopMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lastEdit"
        android:textAppearance="@style/TextAppearance.Body.Bold" />

    <TextView
        android:id="@+id/textViewShowLastEdit"
        style="@style/Block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="July 17, 21:48"
        android:textAppearance="@style/TextAppearance.Body"
        android:textIsSelectable="true" />

</merge>