<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:background="?attr/sgActivatedItemBackgroundDrawer">

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="@dimen/icon_small_size"
        android:layout_height="@dimen/icon_small_size"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginRight="@dimen/large_padding"
        android:layout_centerVertical="true"
        tools:src="?attr/drawableMovie" />

    <TextView
        android:id="@+id/menu_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_toRightOf="@+id/menu_icon"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/keyline"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.Menu"
        android:textColor="?attr/sgColorNavDrawerText"
        tools:text="Movies" />

</RelativeLayout>