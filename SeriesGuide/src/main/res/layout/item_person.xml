<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewPerson"
        android:layout_width="@dimen/person_headshot_size"
        android:layout_height="@dimen/person_headshot_size"
        android:layout_marginRight="@dimen/default_padding"
        tools:src="@drawable/ic_action_movie" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_toRightOf="@+id/imageViewPerson"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance"
            tools:text="Bryan Cranston" />

        <TextView
            android:id="@+id/textViewPersonDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Small"
            tools:text="Walter White" />

    </LinearLayout>


</RelativeLayout>