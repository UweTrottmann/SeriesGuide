<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/grid_item_margin_vertical"
    android:layout_marginLeft="@dimen/grid_leftright_padding"
    android:layout_marginRight="@dimen/grid_leftright_padding"
    android:layout_marginTop="@dimen/grid_item_margin_vertical"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:layout_width="150dp">

    <TextView
        android:id="@+id/textViewGridLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:minHeight="56dp"
        android:paddingBottom="@dimen/inline_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:paddingTop="@dimen/inline_padding"
        tools:drawableStart="@drawable/ic_trakt_icon_primary"
        android:drawablePadding="2dp"
        android:textAppearance="?attr/textAppearanceButton"
        tools:text="Digital releases" />

</com.google.android.material.card.MaterialCardView>