                android:layout_height="wrap_content"
                tools:text="@string/rating2" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#444444">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rating1"
                style="@style/Widget.SeriesGuide.Button.Borderless.Rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/hate" />
        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ratingDelete"
            style="@style/Widget.SeriesGuide.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_remove_rating" />

    </LinearLayout>

</ScrollView>