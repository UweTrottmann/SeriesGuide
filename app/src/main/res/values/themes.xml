<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme" />

    <style name="Theme.BaseSeriesGuide" parent="Theme.AppCompat.NoActionBar">

        <!-- All customizations that are SPECIFIC to API-level 21 go here. -->

    </style>

    <!-- SeriesGuides default theme -->
    <style name="Theme.SeriesGuide" parent="Theme.BaseSeriesGuide">

        <!-- All customizations that are NOT specific to a supported API-level can go here. -->

        <!-- Explicitly add windowActionBar as some devices crash due to it missing -->
        <item name="windowActionBar">false</item>

        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@color/accent_primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/accent_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/teal_500</item>

        <!-- Special attributes -->
        <item name="sgActivatedItemBackgroundDrawer">@drawable/activated_background_drawer_sg</item>

        <!-- Windows -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- System widgets -->
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_sg</item>

        <!-- Action bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>

        <!-- Text -->
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="sgTextAppearanceBody1">@style/TextAppearance.SeriesGuide.Body1</item>
        <item name="sgTextAppearanceBody2">@style/TextAppearance.SeriesGuide.Body2</item>

        <!-- Colors -->
        <item name="sgTextColorGreen">@color/teal_500</item>
        <item name="sgTextColorSecondaryDim">@color/text_secondary_disabled_dark</item>
        <item name="sgColorBackgroundCard">@color/background_card_dark</item>
        <item name="sgColorBackgroundDim">@color/black_38</item>
        <item name="sgColorIcon">@color/white</item>
        <item name="sgColorIconInactive">@color/white_50</item>
        <item name="sgColorSeparator">@color/separator</item>
        <item name="sgColorDivider">@color/divider</item>
        <item name="sgColorNavDrawerIcon">@color/nav_drawer_icon_sg</item>
        <item name="sgColorNavDrawerText">@color/nav_drawer_text_sg</item>
        <item name="sgColorShadow">@color/protection_dark</item>

        <!-- Drawables -->
        <item name="drawableBackgroundGradient">@drawable/background_gradient</item>
        <item name="drawableCancel">@drawable/ic_action_cancel</item>
        <item name="drawableTraktHeart">@drawable/trakt_heart</item>

    </style>

